//Suma de los números enteros entre 1 y N.
//S=1+2+3+⋯…………+N

#include <iostream>
using namespace std; 
int main()
{
    int N, suma=0;
    cout<<"Ingrese un número: ";
    cin>>N;
    for (int i=1;i<=N;i++)
        suma+=i;
    cout<< "La suma de los numeros enteros de 1 a " << N << " es: " << suma << endl;

    return 0;
}
